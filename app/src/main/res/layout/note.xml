<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/note_height">

    <!-- this view reveals when swipe right -->
    <RelativeLayout
        android:tag="reveal-right"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:tint="@color/colorIcons"
            android:src="@mipmap/ic_favorite_black_24dp"/>
    </RelativeLayout>


    <!-- this view reveals when swipe left -->
    <RelativeLayout
        android:tag="reveal-left"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:tint="@color/colorIcons"
            android:src="@mipmap/ic_delete_black_24dp"/>
    </RelativeLayout>


    <!-- this is the item front view -->
    <RelativeLayout
        android:tag="front"
        android:background="@color/colorNoteBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/note_padding">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/noteIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            app:placeholderImage="@drawable/ic_note"
            app:roundAsCircle="true"/>

        <TextView
            android:id="@+id/noteSnippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/noteIcon"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noteTimeStamp"
            android:layout_below="@+id/noteSnippet"
            android:layout_alignStart="@+id/noteSnippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
    </RelativeLayout>


    <!-- just a divider -->
    <View android:background="@color/colorDivider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp" />

</FrameLayout>